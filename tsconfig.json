{
    "compilerOptions": {
      "target": "es6",
      "baseUrl": "src",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": ["dom", "dom.iterable", "esnext"],
      "outDir": "./dist/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames":true,
      "jsx": "react", 
    },
    "include": [
      "src"
    ]
}